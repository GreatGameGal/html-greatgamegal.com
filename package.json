{
  "name": "greatgamegal.com-html",
  "version": "1.0.0",
  "description": "Frontend for greatgamegal.com.",
  "main": "index.js",
  "author": "Serenity Braesch",
  "license": "MIT",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "formatAndLint": "npm-run-all format lint",
    "copy:json": "copyfiles -u 1 src/**/*.json build",
    "copy:html": "copyfiles -u 1 src/**/*.html build",
    "copy": "npm-run-all --parallel copy:*",
    "clean": "rimraf ./build/*",
    "watch": "npm-run-all --parallel watch:*",
    "build:typescript": "tsc",
    "build:sass": "sass --no-source-map src/sass:build/css",
    "build": "npm-run-all clean copy --parallel build:*"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.50.0",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "prettier": "^2.6.2"
  }
}
