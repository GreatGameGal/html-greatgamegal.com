{
  "name": "greatgamegal.com-html",
  "version": "1.0.0",
  "description": "Frontend for greatgamegal.com.",
  "main": "index.js",
  "author": "Serenity Braesch",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lintAndFix": "eslint --fix .",
    "copy:json": "copyfiles -u 1 src/**/*.json build",
    "copy:html": "copyfiles -u 1 src/**/*.html build",
    "copy:resources": "copyfiles -u 1 -a src/**/resources/** build",
    "copy": "npm-run-all --parallel copy:*",
    "clean:css": "shopt -s globstar && rimraf build/**/*.css",
    "clean:js": "shopt -s globstar && rimraf build/**/*.js",
    "clean:json": "shopt -s globstar && rimraf build/**/*.json",
    "clean:html": "shopt -s globstar && rimraf build/**/*.html ./build/**/*.htm",
    "clean:resources": "shopt -s globstar && rimraf build/**/resources",
    "clean": "rimraf build/*",
    "watch:ts": "onchange 'src/**/*.ts' 'src/**/*.js' -- npm-run-all clean:js lintAndFix build:typescript",
    "watch:sass": "onchange 'src/**/*.scss' -- npm-run-all clean:css lintAndFix build:sass",
    "watch:html": "onchange 'src/**/*.html' 'src/**/*.htm' -- npm-run-all clean:html lintAndFix copy:html",
    "watch:json": "onchange 'src/**/*.json' -- npm-run-all clean:json lintAndFix copy:json",
    "watch:resources": "onchange 'src/**/resources/**' -- npm-run-all clean:resources copy:resources",
    "watch": "npm-run-all --parallel watch:*",
    "build:typescript": "tsc",
    "build:sass": "sass --no-source-map src/sass:build/css",
    "build": "npm-run-all clean copy --parallel build:*",
    "dev": "yarn run watch"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.50.0",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0"
  }
}
